{
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=5.6.20"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "3.7.2"
    },
    "scripts": {
        "phpcs": [
            "./vendor/bin/phpcs --standard=./phpcs_ruleset.xml"
        ],
        "phpcbf": [
            "./vendor/bin/phpcbf --standard=./phpcs_ruleset.xml --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 -w "
        ]
    }
}
